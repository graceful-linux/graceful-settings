<?xml version="1.0"?>
<gconfschemafile>
    <schemalist>
        <!-- desktop background picture -->
        <schema>
            <key>/graceful/desktop/desktop-background</key>
            <applyto>/graceful/desktop/desktop-background</applyto>
            <owner>graceful linux</owner>
            <type>string</type>
            <default></default>
            <locale name="C">
                <short>background</short>
                <long></long>
            </locale>
        </schema>

        <!-- graceful-daemon - start -->
        <!-- gtk theme -->
        <schema>
            <key>/graceful/daemon/gtk-theme</key>
            <applyto>/graceful/daemon/gtk-theme</applyto>
            <owner>graceful linux</owner>
            <type>string</type>
            <default></default>
            <locale name="C">
                <short>gtk theme</short>
                <long></long>
            </locale>
        </schema>
        <!-- icon theme -->
        <schema>
            <key>/graceful/daemon/icon-theme</key>
            <applyto>/graceful/daemon/icon-theme</applyto>
            <owner>graceful linux</owner>
            <type>string</type>
            <default></default>
            <locale name="C">
                <short>icon theme</short>
                <long></long>
            </locale>
        </schema>
        <!-- cursor theme -->
        <schema>
            <key>/graceful/daemon/cursor-theme</key>
            <applyto>/graceful/daemon/cursor-theme</applyto>
            <owner>graceful linux</owner>
            <type>string</type>
            <default></default>
            <locale name="C">
                <short>cursor theme</short>
                <long></long>
            </locale>
        </schema>
        <!-- cursor size -->
        <schema>
            <key>/graceful/daemon/cursor-size</key>
            <applyto>/graceful/daemon/cursor-size</applyto>
            <owner>graceful linux</owner>
            <type>int</type>
            <default></default>
            <locale name="C">
                <short>cursor size</short>
                <long></long>
            </locale>
        </schema>
        <!-- graceful-daemon - end -->
    </schemalist>
</gconfschemafile>
