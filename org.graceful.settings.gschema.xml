    <key name="graceful-greeter" type="b">
      <default>false</default>
      <summary>graceful-greeter</summary>
    </key>
    <key name="graceful-gvfs" type="b">
      <default>false</default>
      <summary>graceful-gvfs</summary>
    </key>
    <key name="graceful-session" type="b">
      <default>false</default>
      <summary>graceful-session</summary>
    </key>
    <key name="graceful-glib" type="b">
      <default>false</default>
      <summary>graceful-glib</summary>
    </key>
    <key name="graceful-settings-daemon" type="b">
      <default>false</default>
      <summary>graceful-settings-daemon</summary>
    </key>
  </schema>
  <schema id="org.graceful.settings.desktop" path="/graceful/desktop/">
