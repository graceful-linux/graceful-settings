<schemalist gettext-domain="org.graceful.settings">
  <schema id="org.graceful.settings" path="/graceful/">
    <child name="desktop" schema="org.graceful.settings.desktop"/>
    <child name="daemon" schema="org.graceful.settings.daemon"/>
  </schema>
  <schema id="org.graceful.settings.desktop" path="/graceful/desktop/">
    <key name="desktop-background" type="s">
      <default>''</default>
      <summary>background</summary>
    </key>
  </schema>
  <schema id="org.graceful.settings.daemon" path="/graceful/daemon/">
    <key name="gtk-theme" type="s">
      <default>''</default>
      <summary>gtk theme</summary>
    </key>
    <key name="icon-theme" type="s">
      <default>''</default>
      <summary>icon theme</summary>
    </key>
    <key name="cursor-theme" type="s">
      <default>''</default>
      <summary>cursor theme</summary>
    </key>
    <key name="cursor-size" type="i">
      <default>0</default>
      <summary>cursor size</summary>
    </key>
  </schema>
</schemalist>
