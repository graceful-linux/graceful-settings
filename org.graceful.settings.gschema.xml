    <child name="desktop" schema="org.graceful.settings.desktop"/>
    <child name="daemon" schema="org.graceful.settings.daemon"/>
  </schema>
  <schema id="org.graceful.settings.log" path="/graceful/log/">
    <key name="graceful-udisks" type="b">
      <default>false</default>
      <summary>graceful-udisks</summary>
    </key>
    <key name="graceful-systemd" type="b">
      <default>false</default>
      <summary>graceful-systemd</summary>
    </key>
    <key name="graceful-util-linux" type="b">
      <default>false</default>
      <summary>graceful-util-linux</summary>
